@{
    ViewData["Title"] = "Members";
    var items = (List<DotnetCd.Models.User>) ViewData["items"];
}
<div class="w-full"><div class="m-auto max-w-xl px-2 py-4">
    <div class="flex items justify-between mb-6">
        <h2 class="roboto text-grey-darkest text-xl uppercase">Site Members</h2>
    </div>

    <table class="table-fixed w-full text-base leading-normal mb-4" id="dash-table">
        <thead>
            <tr class="bg-grey-light font-bold select-none text-grey-darker text-left tracking-wide uppercase text-xs break-words">
                <th class="p-2">Icon</th>
                <th class="p-2">Handle</th>
                <th class="p-2">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr class="text-xs break-words px-4 py-4 bg-grey-lighter">
                    <td class="p-2">
                        <img @{<text>src="@item.Avatar"</text>} />
                    </td>
                    <td class="p-2">@@@item.Handle</td>
                    <td class="p-2">@item.Name</td>
                </tr>
            }

            @if ( 0 == items.Count )
            {
                <tr class="text-xs break-words px-4 py-4 bg-grey-lighter">
                    <td class="italic p-2 text-center text-grey-dark text-sm tracking-wide" colspan="3">No members available.</td>
                </tr>
            }
        </tbody>
    </table>
</div></div>
